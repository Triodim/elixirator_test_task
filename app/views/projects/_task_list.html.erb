<h4>Tasks for <%= project.name %></h4>

<% if tasks.any? %>
  <ul id="tasks_list_for_project_<%= project.id %>">
    <% tasks.each do |task| %>
      <%= render partial: "tasks/task", locals: { task: task } %>
    <% end %>
  </ul>
<% else %>
  <p>No active tasks.</p>
<% end %>

<%= render partial: "tasks/form", locals: { project: project, task: Task.new } %>