<%= turbo_frame_tag "new_task_form_for_project_#{project.id}" do %>
  <%= form_with model: [project, task], data: { turbo_frame: "new_task_form_for_project_#{project.id}" } do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div>
      <%= f.label :status %>
      <%= f.select :status, Task.statuses.keys.map { |s| [s.titleize, s] } %>
    </div>
    <%= f.submit "Add Task" %>
  <% end %>
<% end %>